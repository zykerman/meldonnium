<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:paddingTop="20dp">

    <!-- view background color -->
    <solid
        android:color="#A0E8F9" >
    </solid>

    <!-- view border color and width -->
    <stroke
        android:width="1dp"
        android:color="#D0E0D0" >
    </stroke>
    <padding
    android:bottom="15dp"
    android:left="150dp"
    android:right="15dp"
    android:top="15dp" />
    <!-- The radius makes the corners rounded -->
    <corners
        android:radius="8dp"   >
    </corners>
    <gradient
        android:angle="270"
        android:startColor="#EFEFEF"
        android:endColor="#A0E8F9"
        android:type="linear" />
</shape>